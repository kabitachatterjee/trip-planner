<div class="parallax-container">
  <div class="parallax">
    <img src="../../images/trip.jpg">
  </div>
</div>

<div class="section white container">
   <div class="sign">
     <h4 class="page-header">Create Account</h4>
     <div class="grey-text text-darken-3 lighten-3">
          {{#if errors}}
            {{#each errors}}
              <div class="alert alert-danger">{{msg}}</div>
            {{/each}}
          {{/if}}
          <form method="post" action="/users/register">
              <div class="form-group">
                  <label>Name</label>
                  <input type="text" class="form-control" placeholder="Name" name="name">
              </div>
              <div class="form-group">
                  <label>Username</label>
                  <input type="text" class="form-control" placeholder="Username" name="username">
              </div>
              <div class="form-group">
                  <label>Email</label>
                  <input type="email" class="form-control" placeholder="Email" name="email">
              </div>
              <div class="form-group">
                  <label>Password</label>
                  <input type="password" class="form-control" placeholder="Password" name="password">
              </div>
              <div class="form-group">
                  <label>Confirm Password</label>
                  <input type="password" class="form-control" placeholder="Password" name="password2">
              </div>
                  <button type="submit" class="btn btn-default orange darken-4 right-align">Sign Up</button>
              </form>
            <p>Already have an account? <a href="/users/login">Login</a></p>
        </div>
    </div>
</div>

<div class="parallax-container">
    <div class="parallax">
        <img src="../../images/plan.jpg">
    </div>
</div>
